$C = "../Common.ui";

@NavButtonStyle = TextButtonStyle(
  Default: (Background: #0f1721, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Hovered: (Background: #1a2533, LabelStyle: (FontSize: 13, TextColor: #d6e3f1, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Pressed: (Background: #0a121c, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center))
);

@ActionButtonStyle = TextButtonStyle(
  Default: (Background: #223042, LabelStyle: (FontSize: 13, TextColor: #e0e8f1, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #2b3b52, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2636, LabelStyle: (FontSize: 13, TextColor: #d0d8e1, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 12, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

