// Help Menu UI
// Guide des commandes, kits et regles

VerticalLayout {
    Name: "HelpMenuRoot";
    Style: (
        BackgroundColor: #1a1a1a,
        Padding: 20,
        Width: 550,
        Height: 420
    );
    Anchor: (CenterX: 0, CenterY: 0);

    Children: [
        // Header
        Label {
            Text: "Guide des Duels";
            Style: (FontSize: 20, TextColor: #4fc3f7, FontWeight: Bold);
            Anchor: (Bottom: 15);
        },

        // Navigation Tabs
        HorizontalLayout {
            Style: (Padding: 5, BackgroundColor: #2a2a2a);
            Anchor: (Bottom: 10);
            Children: [
                Button {
                    Name: "NavCommandsButton";
                    Style: (Padding: 10, BackgroundColor: #333333);
                    Anchor: (Right: 5);
                    Children: [
                        Label { Text: "Commandes"; Style: (FontSize: 13, TextColor: #d7e0e8); }
                    ];
                },
                VerticalLayout {
                    Name: "NavCommandsIndicator";
                    Visible: true;
                    Style: (Height: 3, Width: 70, BackgroundColor: #4fc3f7);
                },
                Button {
                    Name: "NavKitsButton";
                    Style: (Padding: 10, BackgroundColor: #333333);
                    Anchor: (Right: 5);
                    Children: [
                        Label { Text: "Kits"; Style: (FontSize: 13, TextColor: #d7e0e8); }
                    ];
                },
                VerticalLayout {
                    Name: "NavKitsIndicator";
                    Visible: false;
                    Style: (Height: 3, Width: 70, BackgroundColor: #4fc3f7);
                },
                Button {
                    Name: "NavRulesButton";
                    Style: (Padding: 10, BackgroundColor: #333333);
                    Children: [
                        Label { Text: "Regles"; Style: (FontSize: 13, TextColor: #d7e0e8); }
                    ];
                },
                VerticalLayout {
                    Name: "NavRulesIndicator";
                    Visible: false;
                    Style: (Height: 3, Width: 70, BackgroundColor: #4fc3f7);
                }
            ];
        },

        // === COMMANDS VIEW ===
        VerticalLayout {
            Name: "CommandsView";
            Visible: true;
            Style: (Padding: 10);
            Children: [
                ScrollView {
                    Style: (Height: 280, BackgroundColor: #1e1e1e, Padding: 5);
                    Children: [
                        VerticalLayout {
                            Name: "CommandsList";
                        }
                    ];
                }
            ];
        },

        // === KITS VIEW ===
        VerticalLayout {
            Name: "KitsView";
            Visible: false;
            Style: (Padding: 10);
            Children: [
                ScrollView {
                    Style: (Height: 280, BackgroundColor: #1e1e1e, Padding: 5);
                    Children: [
                        VerticalLayout {
                            Name: "KitsList";
                        }
                    ];
                }
            ];
        },

        // === RULES VIEW ===
        VerticalLayout {
            Name: "RulesView";
            Visible: false;
            Style: (Padding: 10);
            Children: [
                ScrollView {
                    Style: (Height: 280, BackgroundColor: #1e1e1e, Padding: 5);
                    Children: [
                        VerticalLayout {
                            Name: "RulesList";
                        }
                    ];
                }
            ];
        }
    ];
}
