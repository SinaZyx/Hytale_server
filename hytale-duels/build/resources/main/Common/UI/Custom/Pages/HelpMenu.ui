@NavButtonStyle = TextButtonStyle(
  Default: (Background: #0f1721, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Hovered: (Background: #1a2533, LabelStyle: (FontSize: 13, TextColor: #d6e3f1, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Pressed: (Background: #0a121c, LabelStyle: (FontSize: 13, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center))
);

Group #HelpRoot {
  Anchor: (Width: 600, Height: 450);
  LayoutMode: Top;
  Background: #0f1621(0.98);
  Padding: (Full: 20);

  Label {
    Text: "Guide des Duels";
    Anchor: (Height: 32);
    Style: (FontSize: 22, TextColor: #4fc3f7, RenderBold: true);
  }

  Group { Anchor: (Height: 1); Background: #2b3542; }
  Group { Anchor: (Height: 12); }

  Group #CommandsSection {
    Background: #1a2330(0.95);
    LayoutMode: Top;
    Padding: (Full: 12);
    Anchor: (Bottom: 10);

    Label {
      Text: "COMMANDES";
      Style: (FontSize: 11, TextColor: #6e7da1, RenderUppercase: true, LetterSpacing: 1);
      Anchor: (Bottom: 8);
    }

    Group #CommandsList {
      LayoutMode: Top;
    }
  }

  Group #RulesSection {
    Background: #1a2330(0.95);
    LayoutMode: Top;
    Padding: (Full: 12);

    Label {
      Text: "REGLES";
      Style: (FontSize: 11, TextColor: #6e7da1, RenderUppercase: true, LetterSpacing: 1);
      Anchor: (Bottom: 8);
    }

    Group #RulesList {
      LayoutMode: Top;
    }
  }
}
